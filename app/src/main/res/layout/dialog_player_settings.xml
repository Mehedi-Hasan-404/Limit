<?xml version="1.0" encoding="utf-8"?>
<!--
    Dialog colors taken exactly from the workflow's ThemeOverlay.CheckboxDemo.Dialog:
      colorSurface / card background  → #1F1F1F
      colorOnSurface / text           → #FFFFFF
      colorPrimary / accent           → #EF4444
      tab bar background              → #252525
      divider                         → #2A2A2A
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dialogCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#1F1F1F"
        app:strokeColor="#2A2A2A"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ── Header ── -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingStart="20dp"
                android:paddingEnd="12dp"
                android:background="#1F1F1F">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Player Settings"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_close"
                    android:tint="#FFFFFF"
                    android:contentDescription="Close"
                    android:focusable="true"
                    android:nextFocusDown="@id/tabLayout" />
            </RelativeLayout>

            <!-- ── Header / tab divider ── -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2A2A2A" />

            <!-- ── Tab bar — background #252525, indicator + selected text #EF4444 ── -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#252525"
                android:focusable="true"
                android:nextFocusUp="@id/btnClose"
                android:nextFocusDown="@id/recyclerView"
                app:tabIndicatorColor="#EF4444"
                app:tabIndicatorHeight="2dp"
                app:tabSelectedTextColor="#EF4444"
                app:tabTextColor="#999999"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabTextAppearance="@style/TabTextStyle" />

            <!-- ── Track list — each row uses item_track_option.xml ── -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:clipToPadding="false"
                android:scrollbars="vertical"
                android:scrollbarStyle="outsideOverlay"
                android:overScrollMode="ifContentScrolls"
                android:focusable="true"
                android:descendantFocusability="afterDescendants"
                android:nextFocusUp="@id/tabLayout"
                android:nextFocusDown="@id/btnCancel" />

            <!-- ── Divider ── -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2A2A2A" />

            <!-- ── Button bar ── -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:padding="12dp"
                android:background="#1F1F1F">

                <!-- CANCEL — text button, muted colour -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="CANCEL"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:focusable="true"
                    android:nextFocusUp="@id/recyclerView"
                    android:nextFocusRight="@id/btnApply" />

                <!-- APPLY — filled red button matching workflow's MaterialButton backgroundTint="#EF4444" -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApply"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="APPLY"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:backgroundTint="#EF4444"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    app:cornerRadius="20dp"
                    android:focusable="true"
                    android:nextFocusUp="@id/recyclerView"
                    android:nextFocusLeft="@id/btnCancel" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
