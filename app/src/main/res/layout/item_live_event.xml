<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="3dp"
    app:cardBackgroundColor="#1F1F1F"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="#EF4444"
    app:strokeWidth="1dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- MAIN CONTENT -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:minHeight="85dp">

            <!-- LEAGUE -->
            <ImageView
                android:id="@+id/leagueLogo"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/leagueName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:text="League Name"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@id/leagueLogo"
                app:layout_constraintEnd_toStartOf="@id/categoryTag"
                app:layout_constraintTop_toTopOf="@id/leagueLogo"
                app:layout_constraintBottom_toBottomOf="@id/leagueLogo"/>

            <TextView
                android:id="@+id/categoryTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_category_pill"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="Cricket"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/leagueName"
                app:layout_constraintBottom_toBottomOf="@id/leagueName"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#3A3A3A"
                app:layout_constraintTop_toBottomOf="@id/leagueLogo"/>

            <!-- TEAM 1 -->
            <LinearLayout
                android:id="@+id/team1Section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/centerSection"
                app:layout_constraintTop_toBottomOf="@id/divider">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/team1Logo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    tools:srcCompat="@tools:sample/avatars"/>

                <TextView
                    android:id="@+id/team1Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Team A"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- CENTER -->
            <LinearLayout
                android:id="@+id/centerSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/team1Section"
                app:layout_constraintBottom_toBottomOf="@id/team1Section"
                app:layout_constraintStart_toEndOf="@id/team1Section"
                app:layout_constraintEnd_toStartOf="@id/team2Section">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/liveAnimation"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:visibility="gone"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/live_animation"/>
            </LinearLayout>

            <!-- TEAM 2 -->
            <LinearLayout
                android:id="@+id/team2Section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/centerSection"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/team1Section">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/team2Logo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    tools:srcCompat="@tools:sample/avatars"/>

                <TextView
                    android:id="@+id/team2Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Team B"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- PRECISION RIBBON -->
        <TextView
            android:id="@+id/wrapperBadge"
            android:layout_width="160dp"
            android:layout_height="26dp"
            android:layout_gravity="top|start"
            android:layout_marginStart="-52dp"
            android:layout_marginTop="0dp"
            android:rotation="-45"
            android:pivotX="0dp"
            android:pivotY="0dp"
            android:background="@drawable/bg_wrapper_badge"
            android:gravity="center"
            android:text="Hot"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="gone"/>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
